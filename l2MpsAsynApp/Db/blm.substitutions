### Threshold information ###
file "RegRO.template" { pattern
{ R,                    DESC,                                                   PARAM,                          ADDR        }
{ I$(INT)_THR_CH,       "Bay $(BAY) Ch $(CH) Int $(INT) Threshold channel",     BLM_THRNUM_$(BAY)$(CH)$(INT),    "$(BAY)"   }
{ I$(INT)_THR_CNT,      "Bay $(BAY) Ch $(CH) Int $(INT) Threshold count",       BLM_THRCNT_$(BAY)$(CH)$(INT),    "$(BAY)"   }
{ I$(INT)_THR_BYTEMAP,  "Bay $(BAY) Ch $(CH) Int $(INT) Threshold byte map",    BLM_BYTEMAP_$(BAY)$(CH)$(INT),   "$(BAY)"   }
}

### Tables enable PVs ###
file "Reg1BitRO.template" { pattern
{ R,                    DESC,                                                   PARAM,                          ADDR,       ZNAM,           ONAM,      }
{ I$(INT)_IDL_EN,       "Bay $(BAY) Ch $(CH) Int $(INT) IDLE table enabled",    BLM_IDLEEN_$(BAY)$(CH)$(INT),   "$(BAY)",   "Disabled",     "Enabled"  }
{ I$(INT)_ALT_EN,       "Bay $(BAY) Ch $(CH) Int $(INT) ALT table enabled",     BLM_ALTEN_$(BAY)$(CH)$(INT),    "$(BAY)",   "Disabled",     "Enabled"  }
{ I$(INT)_LC1_EN,       "Bay $(BAY) Ch $(CH) Int $(INT) LCLS1 table enabled",   BLM_LCLS1EN_$(BAY)$(CH)$(INT),  "$(BAY)",   "Disabled",     "Enabled"  }
}

### Threshold PVs ###
